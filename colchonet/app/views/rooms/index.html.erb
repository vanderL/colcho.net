

<h1>Lista de quatos</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Localização</th>
      <th>Descrição</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.title %></td>
        <td><%= room.location %></td>
        <td><%= room.description %></td>
        <td><%= link_to 'Visualizar', room %></td>
        <td><%= link_to 'Edita', edit_room_path(room) %></td>
        <td><%= link_to 'Remover', room, method: :delete, data: { confirm: 'Você tem certeza??' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

